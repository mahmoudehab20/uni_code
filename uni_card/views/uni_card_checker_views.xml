<odoo>

    <record id="uni_card_checker_view_tree" model="ir.ui.view">
        <field name="name">uni.card.checker.view.tree</field>
        <field name="model">uni.card.checker</field>
        <field name="arch" type="xml">
            <tree decoration-success="is_valid"
            decoration-danger="not is_valid">
                <field name="card"/>
                <field name="status"/>
                <field name="is_valid" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="uni_card_checker_action" model="ir.actions.act_window">
        <field name="name">Card Checker</field>
        <field name="res_model">uni.card.checker</field>
    </record>
</odoo>